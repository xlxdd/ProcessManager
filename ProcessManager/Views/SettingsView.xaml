<UserControl x:Class="ProcessManager.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ProcessManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <TextBlock Text="中文" VerticalAlignment="Center" />
        <ToggleButton IsChecked="{Binding LangCheck}"
                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                      ToolTip="Default ToggleButton Style">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Checked">
                    <i:InvokeCommandAction Command="{Binding LangChangeCommand}" CommandParameter="en-US" />
                </i:EventTrigger>
                <i:EventTrigger EventName="Unchecked">
                    <i:InvokeCommandAction Command="{Binding LangChangeCommand}" CommandParameter="zh-CN" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ToggleButton>
        <TextBlock Text="英文" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
